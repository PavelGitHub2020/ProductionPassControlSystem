                            <Setter Property="Template" Value="{StaticResource ComboBoxEditableTemplate}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Resources>
            <Label Content="Condition"/>
            <TextBlock x:Name="unlocked"><Run Text="Unlocked"/></TextBlock>
            <TextBlock x:Name="locked"><Run Text="Locked"/></TextBlock>
        </ComboBox>
    </Grid>
</Window>
